<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Patient_Settings"
    tools:ignore="HardcodedText"
    android:background="@color/greenDoctor2">

    <TextView
        android:id="@+id/TV_A_PatientBooking_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/consolab"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="@color/pureWhite"

        android:textSize="60sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="288dp"
        android:layout_height="58dp"
        android:layout_below="@+id/TV_A_PatientBooking_Title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="@color/bluePatient"
        android:text="Privacy Policy" />

    <Button
        android:id="@+id/button2"
        android:layout_width="288dp"
        android:layout_height="58dp"
        android:layout_below="@+id/TV_A_PatientBooking_Title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="@color/bluePatient"
        android:text=" My Information" />

    <Button
        android:id="@+id/button3"
        android:layout_width="288dp"
        android:layout_height="58dp"
        android:layout_below="@+id/TV_A_PatientBooking_Title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="253dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="@color/bluePatient"
        android:text=" Reset Password" />


</RelativeLayout>